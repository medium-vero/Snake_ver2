#include <windows.h>
#include <stdio.h>
#include<time.h>
#include<conio.h>
int toa_dox[100] = { 0 };
int toa_doy[100] = { 0 };
int sl = 3;
int xqua = -1;
int yqua = -1;
int speed=100;
int score=0; //tinh diem
int highest_record_score=0;
int snakecolor=7;  // xu li phan doi mau lien tuc cho con ran khi an qua
int luachoncu,luachonmoi; // xu li phan menu
int dem=0;
void gotoXY(int x, int y){   // ham di chuyen den toa do (x,y) tren man hinh
  static HANDLE h = NULL;  
  if(!h)
    h = GetStdHandle(STD_OUTPUT_HANDLE);
  COORD c = { x, y };  
  SetConsoleCursorPosition(h,c);
}
void SetColor ( int code ){   // ham chinh mau chu
    HANDLE color = GetStdHandle(STD_OUTPUT_HANDLE);
    SetConsoleTextAttribute( color , code );
}
void Nocursortype(){     // ham xoa con tro chuot tren man hinh console
	CONSOLE_CURSOR_INFO Info;
	Info.bVisible = FALSE;
	Info.dwSize = 20;
	SetConsoleCursorInfo(GetStdHandle(STD_OUTPUT_HANDLE), &Info);
}
void man1(){
	for (int x = 10;x <95;x++){
		gotoXY(x, 1);
		printf("+"); 
		gotoXY(x, 25);
		printf("+"); 
	}
	for (int y = 1;y <= 25;y++){
		gotoXY(10, y);
		printf("+"); 
		gotoXY(95, y);
		printf("+"); 
	}
}
void man2(){
	for (int x = 10;x <95;x++){
		gotoXY(x, 1);
		printf("+"); 
		gotoXY(x, 25);
		printf("+"); 
	}
	for (int y = 1;y <= 25;y++){
		gotoXY(10, y);
		printf("+"); 
		gotoXY(95, y);
		printf("+"); 
	}
	for (int x = 30;x <=40;x++){
		gotoXY(x, 5);
		printf("+");
	} 
	for (int y = 5;y <=10;y++){
		gotoXY(30, y);
		printf("+");
	}
	for (int x = 70;x <=80;x++){
		gotoXY(x, 5);
		printf("+");
	} 
	for (int y = 5;y <=10;y++){
		gotoXY(80, y);
		printf("+");
	}
	for (int x = 30;x <=40;x++){
		gotoXY(x, 20);
		printf("+");
	} 
	for (int y = 15;y <=20;y++){
		gotoXY(30, y);
		printf("+");
	}
	for (int x = 70;x <=80;x++){
		gotoXY(x, 20);
		printf("+");
	} 
	for (int y = 15;y <=20;y++){
		gotoXY(80, y);
		printf("+");
	}
	
}
void khoi_tao_ran(){
	int x_khoi_tao = 50;
	int y_khoi_tao = 13;
	for (int i = 0;i < sl;i++){
		toa_dox[i] = x_khoi_tao--;
		toa_doy[i] = y_khoi_tao;
	}
}
void ve_ran(){
	for (int i = 0;i < sl;i++){
		gotoXY(toa_dox[i], toa_doy[i]);
		if (i == 0){
			printf("0");  //head
		}
		else{
			printf("o"); // body
		}
	}
}
void di_chuyen_ran(int x,int y){
	//them x,y vao dau toadox,toadoy
	for (int i = sl;i > 0;i--){
		toa_dox[i] = toa_dox[i-1];
		toa_doy[i] = toa_doy[i-1];
	}
	toa_dox[0] = x;
	toa_doy[0] = y;
}
bool kt_ran_cham_than(){
	for (int i = 1;i <= sl;i++){
		if (toa_dox[0] == toa_dox[i] && toa_doy[0] == toa_doy[i]){
			return true;
		}
	}
	return false;
}
bool game_over1(){
	if (toa_dox[0] == 10 || toa_dox[0] == 95 ||toa_doy[0] == 1||toa_doy[0] == 25){
		return true;
	}
	return kt_ran_cham_than();
}
bool game_over2(){
	if (toa_dox[0] == 10 || toa_dox[0] == 95 ||toa_doy[0] == 1||toa_doy[0] == 25
	||((toa_dox[0] >= 30 & toa_dox[0] <=  40 & toa_doy[0] == 5 )|| (toa_doy[0] >= 5 & toa_doy[0] <= 10 & toa_dox[0] == 30))
	||((toa_dox[0] >= 70 & toa_dox[0] <=  80 & toa_doy[0] == 5 )|| (toa_doy[0] >= 5 & toa_doy[0] <= 10 & toa_dox[0] == 80))
	||((toa_dox[0] >= 30 & toa_dox[0] <=  40 & toa_doy[0] == 20 )|| (toa_doy[0] >= 15 & toa_doy[0] <= 20 & toa_dox[0] == 30))
	||((toa_dox[0] >= 70 & toa_dox[0] <=  80 & toa_doy[0] == 20 )|| (toa_doy[0] >= 15 & toa_doy[0] <= 20 & toa_dox[0] == 80))){
		return true;
	}
	return kt_ran_cham_than();
}
bool kt_ran_de_qua(){
	for (int i = 0;i < sl;i++){
		if (xqua == toa_dox[i] && yqua == toa_doy[i]){
			return true;
		}
	}
	return false;
}
void tao_qua(){
	do{
		xqua = rand() % (93 - 12 + 1) + 12; // (94 - 11 + 1) + 11
		yqua = rand() % (24 - 2 + 1) + 2;   //	(25 - 1 + 1) + 1
	}while(kt_ran_de_qua());
}
void ve_qua(){
	gotoXY(xqua, yqua);
	SetColor(7);
	printf("@");
}
bool kt_ran_an_qua(){
	return (toa_dox[0] == xqua && toa_doy[0] == yqua);
}
void xu_ly_ran_an_qua(){
	if (kt_ran_an_qua()){
		sl++;      //tang dot
		speed-=1;
		tao_qua(); //tao qua moi
		ve_qua();
		score++;   //tang diem
	}
}
void vaogame1(){
	srand(time(NULL));
	SetColor(7);
	man1();
	khoi_tao_ran();
	tao_qua();
	ve_qua();
	int x = toa_dox[0];
	int y = toa_doy[0];
	int check = 2;
	while (true){
		gotoXY(toa_dox[sl], toa_doy[sl]);
		printf(" ");
		//------ in ----
		ve_ran();
		//control snake
		if (_kbhit()){
			char c = _getch();
			if (c == -32){
				c = _getch();
				if (c == 72 && check != 0){
					check = 1;
				}
				else if (c == 80 && check != 1){
					check = 0;
				}
				else if (c == 75 && check != 2){
					check = 3;
				}
				else if (c == 77 && check != 3){
					check = 2;
				}
			}
		}
		//------ di chuy?n ---
		if (check == 0){
			y++;
		}
		else if (check == 1){
			y--;
		}
		else if (check == 2){
			x++;
		}
		else if (check ==3){
			x--;
		}
		gotoXY(100,2);
		printf("SCORE : %d",score);
		gotoXY(100,5);
		printf("HIGHEST SCORE : %d",highest_record_score);
		if (game_over1()){
			gotoXY(48,12);
			SetColor(13);
			printf("YOUR SCORE : %d   \n",score);
			if(score>highest_record_score){
					highest_record_score=score;
				}
			sl = 3; score=0;
			break;
		}
		xu_ly_ran_an_qua();
		di_chuyen_ran(x,y);
		Sleep(speed); // toc do
	}
	gotoXY(28,13);
	SetColor(7);
}
void vaogame2(){
	srand(time(NULL));
	SetColor(7);
	man2();
	khoi_tao_ran();
	tao_qua();
	ve_qua();
	int x = toa_dox[0];
