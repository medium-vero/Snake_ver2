void menu(int luachoncu, int luachonmoi){
	while(1){
		if(dem!=0){
			SetColor(7);
		}
		system("cls");
		Nocursortype(); // ham an con tro chuot tren man hinh console
		gotoXY(52,1);
		printf("SNAKE GAME");             
		gotoXY(53,4);
		printf("1. CHOI NGAY");
		gotoXY(53,5);
		printf("2. CHON MAN");
		gotoXY(53,6);
		printf("3. TRO GIUP ");
		gotoXY(53,7);
		printf("4. CAI DAT");
		gotoXY(53,8);
		printf("HIGHTEST: %d",highest_record_score);
		SetColor(7);
		gotoXY(53,12);
		printf("CHOICE : ");
		while(1){
			scanf("%d",&luachoncu);
			switch(luachoncu){ 
				case 1: // vao game
					system("cls");
					vaogame1();
					gotoXY(40,14);
					printf("Nhan 3 va Enter de quay lai menu : ");
					scanf("%d",&luachonmoi);
					dem++;
					break;
				case 2: // chon man
					system("cls");
					Nocursortype();
					gotoXY(50,4);
					printf(" Man 1 ");
					gotoXY(50,5);
					printf(" Man 2 ");
					gotoXY(50,6);
					printf(" Nhan 3 va Enter de quay lai menu  : ");
					gotoXY(50,8);
					printf("CHOICE : ");
					scanf("%d",&luachonmoi);
					if(luachonmoi==1){
						system("cls");
						vaogame1();
						gotoXY(40,14);
					    printf("Nhan 3 va Enter de quay lai menu : ");
				 	    scanf("%d",&luachonmoi);
					    dem++;
					    break;	}
					if(luachonmoi==2){
						system("cls");
						vaogame2();
						gotoXY(40,14);
					    printf("Nhan 3 va Enter de quay lai menu : ");
					    scanf("%d",&luachonmoi);
					    dem++;
					    break;
					}
					if(luachonmoi==3){
						break;
					}
						
				case 3: //huong dan
					system("cls");
					gotoXY(50,4);
					printf(" Su dung phim dieu huong de di chuyen");
					gotoXY(50,5);
					printf(" Khi ran dung tuong , ban thua");
					gotoXY(50,6);
					printf(" Nhan 3 va Enter de quay lai menu");
					gotoXY(50,8);
					printf("CHOICE : ");
					scanf("%d",&luachonmoi);
					break;
				case 4: //cai dat toc do
						while(1){	
							system("cls");
							gotoXY(50,4);
							printf("The snake is moving at a speed of %d",speed);
							gotoXY(50,5);
							printf("Press 1 to increase the snake's speed by 10 ");
							gotoXY(50,6);
							printf("Press 2 to decrease the snake's speed by 10 ");
							gotoXY(50,7);
							printf("Press 3 and ENTER to return to the menu");
							gotoXY(50,9);
							printf("CHOICE : ");
							scanf("%d",&luachonmoi);
							if(luachonmoi==1){
								speed=speed-10;
							}	
							if(luachonmoi==2){
								speed=speed+10;
							}
							if(luachonmoi==3)
								break;
						}	
							break;
			}
			if(luachonmoi==3){
				break;
				SetColor(7);
				menu(luachoncu,luachonmoi);
			}
		}
	}
}
int main(){
		menu(luachoncu,luachonmoi);
}
